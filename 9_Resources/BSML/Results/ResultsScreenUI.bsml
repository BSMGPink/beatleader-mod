	<vertical ignore-layout="true" anchor-pos-y="-13" anchor-pos-x="-13" pref-width="8" spacing="1" bg="round-rect-panel" bg-color="#000000AA"
              pad-left="2" pad-right="2" pad-top="1" pad-bottom="1" >
