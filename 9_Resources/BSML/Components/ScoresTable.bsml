<vertical preferred-width="85" pad-top="~vertical-padding" pad-bottom="~vertical-padding">
    <macro.as-host host="extra-score-row">
        <macro.reparent transform="root"/>
    </macro.as-host>

    <macro.for-each items='score-rows'>
        <macro.reparent transform="root"/>
    </macro.for-each>
</vertical>